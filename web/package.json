{
  "name": "torre-de-los-pecados-web",
  "version": "1.0.0",
  "description": "Frontend para el juego Torre de los Pecados",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "test:all": "npm run lint && npm run type-check && npm run test:e2e",
    "clean": "rm -rf .next/ test-results/",
    "prebuild": "npm run clean",
    "postbuild": "echo 'Frontend build completed successfully!'"
  },
  "dependencies": {
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.7.4",
    "tailwindcss": "^3.3.6",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.294.0",
    "clsx": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "eslint": "^8.55.0",
    "eslint-config-next": "^14.0.0",
    "typescript": "^5.3.3"
  },
  "keywords": ["juego", "cartas", "chile", "torre", "pecados", "nextjs", "react"]
}
