{
  "name": "torre-de-los-pecados-api",
  "version": "1.0.0",
  "description": "API para el juego Torre de los Pecados",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:models": "jest tests/unit/models",
    "test:services": "jest tests/unit/services",
    "test:integration": "jest tests/integration",
    "test:socketio": "jest --config jest.socketio.config.js",
    "test:socketio:watch": "jest --config jest.socketio.config.js --watch",
    "test:socketio:coverage": "jest --config jest.socketio.config.js --coverage",
    "test:socketio:performance": "jest --config jest.socketio.config.js socketIoPerformance.test.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:socketio",
    "test:integration:api": "jest tests/integration/ --testNamePattern='API'",
    "test:performance": "jest tests/performance/",
    "test:security:integration": "jest tests/security/",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ --fix",
    "build": "npm run lint && npm test && npm run test:coverage",
    "clean": "rm -rf dist/ coverage/ test-results/",
    "prebuild": "npm run clean",
    "postbuild": "echo 'Build completed successfully!'"
  },
  "keywords": [
    "juego",
    "cartas",
    "chile",
    "torre",
    "pecados"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "socket.io-client": "^4.8.1",
    "supertest": "^6.3.3"
  }
}
